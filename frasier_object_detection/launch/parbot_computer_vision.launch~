<?xml version="1.0"?>
<!--
Launch file to run single softkinetic camera in stand alone (no other /tf) setup with Rviz
The arguments given are the device indices of the cameras determined by the DepthSense deamon.
Additional nodes represent t

-->
<launch>
  <node name="softkinetic_camera" pkg="parbot_computer_vision" type="softkinetic_bringup_node" args="0" output="screen" >
    <param name="camera_link" type="string" value="/softkinetic_camera_link" />
    <param name="rgb_optical_frame" type="string" value="/softkinetic_camera_rgb_optical_frame" />
    <param name="depth_optical_frame" type="string" value="/softkinetic_camera_depth_optical_frame" />
    <param name="rgb_calibration_file" type="string" value="$(find parbot_computer_vision)/resources/senz3d.yaml" />
    <param name="confidence_threshold" type="int" value="200" />
    <param name="use_radius_filter" type="bool" value="false" />
    <param name="search_radius" type="double" value="0.05" />
    <param name="min_neighbours" type="int" value="50" />
  </node>

  <node pkg="tf" type="static_transform_publisher" name="softkinect_tf"
        args="0 0 0 0 0 1.2 /base /softkinetic_camera_link 40" />
       


  <node name="passthrough_filter_node" pkg="parbot_computer_vision" type="passthrough_filter_node" args="0" output="screen" />
  <node name="radius_conditional_filter_node" pkg="parbot_computer_vision" type="radius_conditional_filter_node" args="0" output="screen" />
  <node name="object_seg_node" pkg="parbot_computer_vision" type="object_seg_node" args="0" output="screen" />
  <node name="outlier_display_node" pkg="parbot_computer_vision" type="outlier_display_node" args="0" output="screen" />
  <node name="concave_hull_node" pkg="parbot_computer_vision" type="concave_hull_node" args="0" output="screen" />

  
  
  <node pkg="rviz" type="rviz" name="softkinect_rviz" respawn="false"  required="true"
	args="-d $(find parbot_computer_vision)/launch/softkinetic.rviz"  />
  
</launch>
